<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content col-md-12 col-sm-12 col-xs-12">
      <div class="col-md-6 col-sm-6 col-xs-6">
        <label class='control-label'>Region</label>
        <%= select_tag :region, options_from_collection_for_select(Location.where({location_type: 'region'}), 'id', 'name', params[:region]), {:required => true,:prompt => "-- Select Region --",:class=> 'data-parsley-required width-300px'} %>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-6 text-right">
        <a class="btn btn-primary" data-ft-id="<%= @framework_tender_id %>" data-target="#add-warehouse-assignment" data-toggle="modal">
            <i class="fa fa-plus"></i> Add Warehouse Assignment
        </a>
      </div>
    </div>
    <div class="ibox-content">     

      <table class="table table-striped cats-grouped-datatable">
        <thead>
          <tr>
            <th>Zone</th>
            <th>Woreda</th>
            <th>Source Hub</th>
            <th>Source Warehouse</th>
            <th>Estimated Qty.</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @warehouse_selections.each do |warehouse_selection| %>
          <tr>
            <td><%= Location.find(warehouse_selection.location_id).parent.name %></td>
            <td><%= warehouse_selection.woreda_name %></td>
            <td><%= warehouse_selection.hub_name %></td>
            <td><%= warehouse_selection.warehouse_name %></td>
            <td><%= warehouse_selection.estimated_qty %></td>
            <td>
              <%= link_to 'Remove', warehouse_selection, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

<div class="modal inmodal" id="add-warehouse-assignment" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title">Add Warehouse Assignment</h4>
      </div>
      <div class="modal-body col-md-12 col-sm-12 col-xs-12">
        <div class="ibox float-e-margins col-md-12 col-sm-12 col-xs-12">
          <div class="col-md-6 col-sm-6 col-xs-6">
            <label class='control-label'>Zone</label> <br>
            <%= select_tag :zone, options_from_collection_for_select(Location.where({location_type: 'zone'}), 'id', 'name', params[:region]), {:required => true,:prompt => "-- Select Zone --",:class=> 'data-parsley-required'} %>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-6">
            <label class='control-label'>Woreda</label> <br>
            <%= select_tag :woreda, options_from_collection_for_select(Location.where({location_type: 'woreda'}), 'id', 'name', params[:zone]), {:required => true,:prompt => "-- Select Woreda --",:class=> 'data-parsley-required'} %>
          </div>
        </div>
        <div class="ibox float-e-margins col-md-12 col-sm-12 col-xs-12">
          <div class="col-md-6 col-sm-6 col-xs-6">
            <label class='control-label'>Hub</label> <br>
            <%= select_tag :hub, options_from_collection_for_select(Hub.all, 'id', 'name', params[:hub]), {:required => true,:prompt => "-- Select Hub --",:class=> 'data-parsley-required'} %>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-6">
            <label class='control-label'>Warehouse</label> <br>
            <%= select_tag :warehouse, options_from_collection_for_select(Warehouse.all, 'id', 'name', params[:warehouse]), {:required => true,:prompt => "-- Select Warehouse --",:class=> 'data-parsley-required'} %>
          </div>
        </div>
        <div class="ibox float-e-margins col-md-12 col-sm-12 col-xs-12">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <label class='control-label'>Est. Quantity</label> <br>
            <%= number_field :estimated_qty, :class => 'form-control' %>
          </div>
        </div>
        <div class="spinner" visible="false">
            Loading...
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="save-hrd-item-btn">Save</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $( function() {         

        $('#add-warehouse-assignment').on('shown.bs.modal', function (e) {
            e.preventDefault(); 

            var hrd_id = $( e.relatedTarget ).data('hrd-id'); 
            var zone_id = $( e.relatedTarget ).data('zone-id'); 

            $('#add-warehouse-assignment .spinner').show(); 
            $('#add-warehouse-assignment .form-container').hide(); 

            $("#add-warehouse-assignment .form-container").load( '/hrds/new_hrd_item/' + hrd_id + '?zone_id=' + zone_id, function() { 
                $('#add-warehouse-assignment .spinner').hide(); 
                $('#add-warehouse-assignment .form-container').show(); 
            }); 
        });
    });
</script>